          "format": "uint64"
        }
      }
    },
    "AppliedConfigurationResourceStatus": {
      "type": "string",
      "enum": [
        "QUEUED",
        "INPROGRESS",
        "WAITING_FOR_REOURCE",
        "DONE",
        "TIMEOUT",
        "FAIL"
      ],
      "default": "QUEUED"
    },
    "ConditionInvokeConfiguration": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "title": "latest version of cfg"
        },
        "keepUpdatingOnFailure": {
          "type": "boolean"
        },
        "apiAccessToken": {
          "type": "string",
          "title": "token used to update resources in the configuration"
        }
      }
    },
    "googlerpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    },
    "pbAppliedConfiguration": {
