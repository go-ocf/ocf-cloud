          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "deviceIdFilter": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "title": "at least one must be set"
                },
                "force": {
                  "type": "boolean",
                  "title": "force update even if the configuration has already been applied to device"
                },
                "keepUpdatingOnFailure": {
                  "type": "boolean",
                  "title": "if any update resource fails continue with next resource"
                }
              }
            }
          }
        ],
        "tags": [
          "Configurations"
        ]
      },
      "put": {
        "operationId": "SnapshotService_UpdateConfiguration",
