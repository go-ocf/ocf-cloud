{
  "swagger": "2.0",
  "info": {
    "title": "plgd certificate authority - API",
    "version": "1.0",
    "contact": {
      "name": "plgd.dev",
      "url": "https://github.com/plgd-dev/hub",
      "email": "info@plgd.dev"
